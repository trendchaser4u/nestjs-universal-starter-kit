{
  "name": "nestjs-universal-starter-kit",
  "version": "1.0.0",
  "author": "Boobalan Muthukumran",
  "description": "",
  "license": "MIT",
  "keywords": [],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/trendchaser4u/nestjs-universal-starter-kit.git"
  },
  "scripts": {
    "start:client": "ng serve",
    "watch:server": "webpack --config webpack.dev.server.config.js --progress --colors --display-error-details",
    "start:server": "nodemon",
    "start:server-debug-win": "nodemon --config nodemon-win-debug.json",
    "start:server-debug-linux": "nodemon --config nodemon-linux-debug.json",
    "start:ssr": "nodemon --config nodemon-ssr-dev.json",
    "build:client-and-server-bundles-dev": "ng build && ng run nestjs-universal-starter-kit:server:production",
    "build:client-and-server-bundles": "ng build --prod && ng run nestjs-universal-starter-kit:server:production",
    "compile:server": "webpack --config webpack.prod.server.config.js --progress --colors --display-error-details",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "serve:ssr": "node dist/server",
    "build:prerender": "npm run build:client-and-server-bundles && npm run compile:server && npm run generate:prerender",
    "generate:prerender": "cd dist && node prerender",
    "serve:prerender": "cd dist/browser && http-server -p 8080",
    "ng": "ng",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "~7.2.11",
    "@angular/cdk": "~7.3.6",
    "@angular/common": "~7.2.11",
    "@angular/compiler": "~7.2.11",
    "@angular/core": "~7.2.11",
    "@angular/forms": "~7.2.11",
    "@angular/http": "~7.2.11",
    "@angular/material": "^7.3.6",
    "@angular/platform-browser": "~7.2.11",
    "@angular/platform-browser-dynamic": "~7.2.11",
    "@angular/platform-server": "~7.2.11",
    "@angular/pwa": "^0.12.4",
    "@angular/router": "~7.2.11",
    "@angular/service-worker": "~7.2.11",
    "@nestjs/common": "^6.0.4",
    "@nestjs/core": "^6.0.4",
    "@nestjs/ng-universal": "^0.5.0",
    "@nestjs/platform-express": "^6.0.4",
    "@ngrx/store": "^7.4.0",
    "@nguniversal/common": "7.1.1",
    "@nguniversal/express-engine": "^7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.1",
    "@types/express": "^4.16.1",
    "core-js": "^2.6.5",
    "hammerjs": "^2.0.8",
    "nestjs-config": "^1.3.21",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.6",
    "@angular/compiler-cli": "~7.2.11",
    "@angular/language-service": "~7.2.11",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.18.10",
    "protractor": "~5.4.0",
    "ts-loader": "^5.2.0",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "^3.2.4",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}
